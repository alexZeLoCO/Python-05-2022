def newBoard (size):
    if (size <= 0):
        print("Err. size must be positive.")
        return False
    board = [size]
    for i in range (0, size, 1):
        board[i] = [size]
        for j in range (0, size, 1):
            print("Hola")
            board[i][j] = 0
    return board

def showBoard (board):
    for i in range (0, len(board), 1):
        for j in range (0, len(board[i]), 1):
            print(board[i][j], end=" ")
        print()

showBoard(newBoard(5))
